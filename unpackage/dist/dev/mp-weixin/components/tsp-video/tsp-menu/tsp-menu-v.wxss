/* 右边菜单栏 */
.menuBox{
	position: absolute;
	right: 10rpx;
	width: 115rpx;
	height: 100%;
	z-index: 8;
	display: flex;
	align-items: center;
	justify-content: center;
}
.avatarMenu{
	position: absolute;
	bottom: 20px;
	right: 10rpx;
	width: 115rpx;
	z-index: 8;
	display: flex;
	align-items: center;
	flex-direction: column;
}
.vodMenu{
	margin-top: 100rpx;
	width: 115rpx;
	/* bottom: 400rpx; */
	display: flex;
	align-items: center;
	flex-direction: column;
}
.vodMenu-bright0{
	opacity: 1;
	transition: all 0.3s linear;
}
.vodMenu-bright1{
	opacity: 0;
	transition: all 0.3s linear;
}
.vodMenu-bright2{
	opacity: 0.2;
	transition: all 0.3s linear;
}
.menu-avatar{
	position: relative;
	width: 115rpx;
	height: 115rpx;
	border-radius: 50%;
	background-color: #FFFFFF;
	display: flex;
	align-items: center;
	justify-content: center;
}
.avatar-image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}
.follow{
	position: absolute;
	bottom: -20rpx;
	width: 40rpx;
	height: 40rpx;
	background-color: #FFFFFF;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
}
.follow:active{
	-webkit-transform: scale(0.7);
	        transform: scale(0.7);
	transition: all 0.3s linear;
}
.follow-guanzhu{
	width: 40rpx;
	height: 40rpx;
}
.guanzhu-gou{
	width: 30rpx;
	height: 30rpx;
}
.followActive{
	-webkit-transform: rotate(180deg);
	        transform: rotate(180deg);
	transition: all 0.5s linear;
}
.followHide{
	-webkit-transform: scale(0);
	        transform: scale(0);
	transition: all 0.8s linear;
}
.fabulous{
	width: 100rpx;
	margin-top: 80rpx;
	display: flex;
	align-items: center;
	flex-direction: column;
}
.fabulous-image{
	width: 80rpx;
	height: 80rpx;
}
.fabulous-num{
	width: 100rpx;
	font-size: 28rpx;
	color: #FFFFFF;
	text-align: center;
	margin-top: 10rpx;
}
.rotate-avatar{
	width: 95rpx;
	height: 95rpx;
	border-radius: 95rpx;
	background-color: #333333;
	display: flex;
	align-items: center;
	justify-content: center;
	-webkit-animation: rotateName 5s linear infinite;
	        animation: rotateName 5s linear infinite;
}
.rotate-image{
	width: 55rpx;
	height: 55rpx;
	border-radius: 55rpx;
}
@-webkit-keyframes rotateName{
0%{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100%{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}
@keyframes rotateName{
0%{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
}
100%{
		-webkit-transform: rotate(360deg);
		        transform: rotate(360deg);
}
}
.like-pellet{
	width: 5rpx;
	height: 5rpx;
	background-color: transparent;
	border-radius: 50%;
	/* 绝对定位 居中 */
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%,-50%) scale(0);
	        transform: translate(-50%,-50%) scale(0);
	/* 设置各个方向的阴影 */
	box-shadow: 0 -45rpx 0 #FF0000,
	0 48rpx 0 #FF0000,
	-50rpx 0 0 #FF0000,
	50rpx 0 0 #FF0000,
	-35rpx -35rpx 0 #FF0000,
	35rpx -35rpx 0 #FF0000,
	35rpx 35rpx 0 #FF0000,
	-35rpx 35rpx 0 #FF0000;
}
.like-pellet-active{
	-webkit-animation: likeBlink 0.5s ease-in-out forwards;
	        animation: likeBlink 0.5s ease-in-out forwards;
}
/* 小圆点闪出的动画 */
@-webkit-keyframes likeBlink {
0%{
        -webkit-transform: translate(-50%,-50%) scale(0.5);
                transform: translate(-50%,-50%) scale(0.5);
        opacity: 0.8;
}
50%{
        -webkit-transform: translate(-50%,-50%) scale(1);
                transform: translate(-50%,-50%) scale(1);
        opacity: 1;
}
100%{
        -webkit-transform: translate(-50%,-50%) scale(1.1);
                transform: translate(-50%,-50%) scale(1.1);
        opacity: 0;
}
}
@keyframes likeBlink {
0%{
        -webkit-transform: translate(-50%,-50%) scale(0.5);
                transform: translate(-50%,-50%) scale(0.5);
        opacity: 0.8;
}
50%{
        -webkit-transform: translate(-50%,-50%) scale(1);
                transform: translate(-50%,-50%) scale(1);
        opacity: 1;
}
100%{
        -webkit-transform: translate(-50%,-50%) scale(1.1);
                transform: translate(-50%,-50%) scale(1.1);
        opacity: 0;
}
}
